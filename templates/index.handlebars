<!DOCTYPE html>
<html>
<head>
  <title>fserve</title>
  <link rel="stylesheet" type="text/css" href="/static/css/index.css">
</head>
<body>
  <div class="nav">
    <h2 class="cd">{{ files.0.parent }}</h2>
    <div class="controls">
      <a href="javascript:window.history.back()"><img src="/static/svg/back.svg" alt=""></a>
      <a href="/"><img src="/static/svg/home.svg" alt=""></a>
    </div>
  </div>
  <div class="list">
    {{#each files }}
      {{#if isDir }}
        <a href={{ formattedRelPath }} class="link">
          <div class="item directory">
            <div class="image">
              <img src="/static/svg/folder.svg" />
            </div>
            <p>{{ name }}/</p>
          </div>
        </a>
      {{else }}
        <a href="/file{{ relPath }}" class="link">
          <div class="item file">
            <div class="image">
              {{#if isImage }}
                <img src="/file{{ relPath }}" class="preview" />
              {{else }}
                <img src="/static/svg/file.svg" />
              {{/if }}
            </div>
            <p>{{ name }}</p>
          </div>
        </a>
      {{/if }}
    {{/each }}
  </div>
</body>
</html>
